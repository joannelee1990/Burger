<div class="jumbotron">
<h1 class="display-4">Burgers!</h1>

<hr class="my-4">
<h2 class="lead">Burgers that are not devoured!</h2>
<hr class="my-4">
<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
<hr class="my-4">
<h2 class="lead">Burgers that are devoured!</h2>
<hr class="my-4">
<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
<hr class="my-4">
<h2 class="lead">Add a Burger</h2>
<hr class="my-4">
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit" class="btn btn-outline-dark">Add Burger</button>
</form>
</div>